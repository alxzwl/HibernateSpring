<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="connection.username">root</property>
    	<property name="connection.password">root</property>
    	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    	<property name="connection.url">jdbc:mysql://localhost:3306/pruebasHibernate?useSSL=false</property>

		 <! - Hibernate configuraci칩n b치sica->
		 <! - Dialecto de base de datos utilizado por Hibernate->
		<property name="dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
	
		 <! - Si se imprime SQL en tiempo de ejecuci칩n->
    	<property name="show_sql">true</property>
    
    	     <! - Si formatear SQL en tiempo de ejecuci칩n->
    	<property name="format_sql">true</property>

    </session-factory>
</hibernate-configuration>